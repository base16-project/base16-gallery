<html lang="en">
  <head>
    <title>Base16 Gallery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    <% colorschemes = Dir.entries('base16-vim/colors').reject{ |f| File.directory? f }.map{ |s| s.sub(/\.vim$/, '') } %>
    <% colorschemes.each do |colorscheme| %>
      <%= File.read("out/#{colorscheme}.css") %>
    <% end %>
    .content {
      height: 300px;
      overflow-y: scroll;
    }
    .title {
      font-size: 1.5em !important;
      padding-bottom: 50px;
    }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <h1 class="text-center">Base16 Gallery</h1>
        <p class="text-center">This gallery is generated from <a href="https://github.com/base16-project/base16-vim">base16-project/base16-vim</a> by TANIGUCHI Masaya.</p>
      </div>
      <div class="row" id="gallery">
      <% colorschemes.each do |colorscheme| %>
        <div class="col-4" id="<%= colorscheme %>">
          <div class="content">
            <%= File.read("out/#{colorscheme}.html") %>
          </div>
          <div class="title text-center">
            <%= colorscheme %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </body>
</html>
